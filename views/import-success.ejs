<!doctype html>
<html>

<head>
  <meta charset="utf-8">
  <title>
    <%= title %>
  </title>
  <style>
    body {
      font-family: sans-serif;
      padding: 2rem;
      max-width: 800px;
      margin: 0 auto;
      text-align: center;
    }

    .success-box {
      background: #d4edda;
      color: #155724;
      padding: 2rem;
      border-radius: 8px;
      margin-bottom: 2rem;
    }

    .error-box {
      background: #f8d7da;
      color: #721c24;
      padding: 1rem;
      border-radius: 8px;
      margin-top: 2rem;
      text-align: left;
    }

    .btn {
      display: inline-block;
      padding: 10px 20px;
      background: #007bff;
      color: white;
      text-decoration: none;
      border-radius: 4px;
      margin-top: 1rem;
    }
  </style>
</head>

<body>
  <div class="success-box">
    <h1>Import Complete Successfully!</h1>
    <ul style="list-style: none; padding: 0;">
      <% summary.forEach(function(msg) { %>
        <li>âœ“ <%= msg %>
        </li>
        <% }); %>
    </ul>
    <a href="/dashboard" class="btn">Go to Dashboard</a>
    <a href="/excel/upload-form" class="btn" style="background:#6c757d; margin-left: 10px;">Upload Another</a>
  </div>

  <% if (errors && errors.length> 0) { %>
    <div class="error-box">
      <h3>Warnings / Errors:</h3>
      <ul>
        <% errors.forEach(function(err) { %>
          <li>
            <%= err %>
          </li>
          <% }); %>
      </ul>
    </div>
    <% } %>
</body>

</html>