<% var additionalCSS = typeof additionalCSS !== 'undefined' ? additionalCSS : []; %>
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title || 'Partner Dashboard' %></title>
    
    <!-- Main CSS File (includes all components via @import) -->
    <link rel="stylesheet" href="/css/base.css">
    
    <!-- Force load critical component CSS files -->
    <link rel="stylesheet" href="/css/components/layout.css">
    <link rel="stylesheet" href="/css/components/buttons.css">
    <link rel="stylesheet" href="/css/components/cards.css">
    <link rel="stylesheet" href="/css/components/header.css">
    <link rel="stylesheet" href="/css/components/sidebar.css">
    <link rel="stylesheet" href="/css/components/tables.css">
    <link rel="stylesheet" href="/css/components/login.css">
    
    <!-- Additional CSS if provided -->
    <% if (Array.isArray(additionalCSS)) { %>
        <% additionalCSS.forEach(function(css) { %>
            <link rel="stylesheet" href="<%= css %>">
        <% }); %>
    <% } %>
</head>
<body>
<script>
  // Use same origin (relative) by default; override with BASE_API env if needed
  window.apiBase = '<%= process.env.BASE_API || "" %>';
</script>
<script src="/js/config.js"></script>